[user]
	email = a.elhag01@gmail.com
	name = Al-Baraa El-Hag
[core]
	editor = nvim
[init]
	defaultBranch = main
[alias]
	ad = add
	ada	= add .
	adc = !git add . && git commit
	adi = add -i

	br = branch
	brd = branch -d
	brnm = branch --no-merged
	brm = branch --merged
	brr = branch -r
	brv = branch -v

	ch = checkout
	chb = checkout -b
	chm = checkout main

	cl = clone
	clh = "! f() { git clone https://github.com/$1/$2.git ; }; f"
	cls = "! f() { git clone git@github.com:$1/$2.git ; }; f"

	co = commit
	coi = commit -m "initial commit"
	com = commit -m
	coam = commit -a -m

	di = diff
	dis = diff --staged

	ed = config --global -e

	lo = log
	loa = log --all --decorate --oneline --graph
	lod = log --decorate --oneline --graph
	
	me = merge
	met = mergetool

	rb = rebase

	re = restore
	res = restore --staged

	rt = remote
	rtv = remote -v
	rts = "!f() { git remote set-url origin git@github.com:$1/$2.git; }; f"
	rtao = "!f() { git remote add origin git@github.com:$1/$2.git; }; f"

	st = status
	sts = status -s

	tg = tag
	tgn = tag -n99

	pu = push
	puuo = push --set-upstream origin

[mergetool "nvim"]
  cmd = nvim -f -c \"Gvdiffsplit!\" \"$MERGED\"
[merge]
  tool = nvim
[mergetool]
  prompt = false
