[user]
	email = a.elhag01@gmail.com
	name = Al-Baraa El-Hag
[core]
	editor = nvim
[init]
	defaultBranch = main
[alias]
	ad = add
	ada	= add .
	adc = !git add . && git commit
	adi = add -i

	br = branch
	brd = branch -d
	brnm = branch --no-merged
	brm = branch --merged
	brr = branch -r
	brv = branch -v

	ch = checkout
	chb = checkout -b
	chm = checkout main

	cl = clone

	co = commit
	com = commit -m
	coam = commit -a -m

	di = diff
	dis = diff --staged

	ed = config --global -e

	lo = log
	loa = log --all --decorate --oneline --graph
	
	me = merge
	met = mergetool

	rb = rebase

	re = restore
	res = restore --staged

	st = status
	sts = status -s

	pu = push
	puu = push --set-upstream
	puuo = push --set-upstream origin

[mergetool "nvim"]
  cmd = nvim -f -c \"Gvdiffsplit!\" \"$MERGED\"
[merge]
  tool = nvim
[mergetool]
  prompt = false
