[alias]
	ad = add
	ada	= add .
	adc = !git add . && git commit
	adi = add -i

	br = branch
	brd = branch -d
	brf = branch -f
	brnm = branch --no-merged
	brm = branch --merged
	brr = branch -r
	brv = branch -v

	cn = clean
	cni = clean -i
	cnn = clean -n
	cnf = clean -f

	cl = clone
	clh = "! f() { git clone https://github.com/$1/$2.git ; }; f"
	clhd = "! f() { git clone https://github.com/drskoolie/$1.git ; }; f"
	cls = "! f() { git clone git@github.com:$1/$2.git ; }; f"
	clsd = "! f() { git clone git@github.com:drskoolie/$1.git ; }; f"

	co = commit
	coi = commit -m "initial commit"
	com = commit -m
	coam = commit -a -m

	de = describe

	di = diff
	dis = diff --staged
	din = !git --no-pager diff --no-color

	ed = config --global -e
	
	fe = fetch
	feo = fetch origin

	gr = grep -n -I

	lo = "! f() { git log --no-color --no-decorate | bat -n -l 'Git log' ; }; f"
	loa = log --all --decorate --oneline --graph
	lod = log --decorate --oneline --graph
	lop = log -p
	lot = log --simplify-by-decoration
	
	me = merge
	mem = merge main
	med = merge develop
	met = mergetool

	rb = rebase

	rs = restore
	rss = restore --staged

	rm = remote
	rmr = remote remove
	rmv = remote -v
	rms = "!f() { git remote set-url origin git@github.com:$1/$2.git; }; f"
	rmsd = remote set-url origin git@github.com:drskoolie/dotfiles.git
	rmao = "!f() { git remote add origin git@github.com:$1/$2.git; }; f"

	rv = revert

	sh = show

	sw = switch
	sw- = switch -
	swc = switch -c
	swcd = switch -c develop
	swm = switch main
	swd = switch develop
	sa = stash
	sap = stash pop

	st = status
	sts = status -s

	tg = tag
	tga = tag -a
	tgn = tag -n99
	tgnr = tag -n99 -l --sort=-v:refname

	pu = push
	pudo = push --delete origin
	puo = push origin
	puot = !git puo $(git describe --tags --abbrev=0)
	puuo = push --set-upstream origin

[color]
	ui = true
[color "diff-highlight"]
	oldNormal = red bold
	oldHighlight = red bold 52
	newNormal = green bold
	newHighlight = green bold 22
[color "diff"]
	meta = 11
	frag = magenta bold
	func = 146 bold
	commit = yellow bold
	old = red bold
	new = green bold
	whitespace = red reverse
[commit]
	verbose = true
[core]
	editor = nvim
	pager = diff-so-fancy | less --tabs=4 -RFX
[init]
	defaultBranch = main
[mergetool "nvim"]
  cmd = nvim -f -c \"Gvdiffsplit!\" \"$MERGED\"
[merge]
  tool = nvim
[mergetool]
  prompt = false
[user]
	email = a.elhag01@gmail.com
	name = Al-Baraa El-Hag
[interactive]
	diffFilter = diff-so-fancy --patch
