[alias]
	ad = add
	ada	= add .
	adc = !git add . && git commit
	adcv = !git add . && git commit -v
	adi = add -i

	br = branch
	bra = branch --all
	brd = branch --delete
	brr = branch --remotes
	brv = branch -v

	cl = clone
	clh = "! f() { git clone https://github.com/$1/$2.git ; }; f"
	clhd = "! f() { git clone https://github.com/drskoolie/$1.git ; }; f"
	cls = "! f() { git clone git@github.com:$1/$2.git ; }; f"
	clsd = "! f() { git clone git@github.com:drskoolie/$1.git ; }; f"

	cn = clean
	cnf = clean -f
	cni = clean -i
	cnn = clean -n

	co = commit
	coa = commit --amend
	coav = commit --amend -v
	com = commit -m
	cov = commit -v

	de = describe

	di = diff
	dih = diff HEAD~1
	din = !git --no-pager diff --no-color
	diw = diff --color-words='[^[:space:]]|([[:alnum:]]|UTF_8_GUARD)+'
	dis = diff --staged

	ed = config --global -e

	fe = fetch
	feo = fetch origin
	fep = fetch --prune

	gr = grep -n -I

	lo = log
	loa = log --all --decorate --oneline --graph
	lod = log --decorate --oneline --graph
	lop = log -p
	lor = !git log --graph --decorate --oneline $(git rev-list -g --all)
	lot = log --simplify-by-decoration

	me = merge
	med = merge develop
	mem = merge main
	met = mergetool

	pu = push
	puod = push origin --delete 
	puuo = push -u origin
	puuob = "!f() { \
		CURRENT_BRANCH=$(git rev-parse --abbrev-ref HEAD); \
		git push --set-upstream origin $CURRENT_BRANCH; \
	}; f"
	puot = !git push origin $(git describe --tags --abbrev=0)

	rb = rebase

	rf = reflog

	rmao = "!f() { git remote add origin git@github.com:$1/$2.git; }; f"
	rmaod = "!f() { git remote add origin git@github.com:drskoolie/$1.git; }; f"
	rmr = remote remove
	rms = "!f() { git remote set-url origin git@github.com:$1/$2.git; }; f"
	rmsd = remote set-url origin git@github.com:drskoolie/dotfiles.git
	rmv = remote -v

	sa = stash
	sal = stash list
	sap = stash pop
	sas = stash show

	sh = show

	sm = submodule
	sma = submodule add
	smad = submodule add --depth 1

	st = status
	sts = status -s

	sw = switch
	sw- = switch -
	swc = switch -c
	swcd = switch -c develop
	swd = switch develop
	swm = switch main

	tg = tag
	tga = tag -a
	tgd = tag -d
	tgn = tag -n99 -l --sort=v:refname
	tgnh = "! f() { git tag -n99 -l --sort=-v:refname | head ; }; f"
	tgnr = tag -n99 -l --sort=-v:refname

[color]
	ui = auto
[color "diff-highlight"]
	oldNormal = red bold
	oldHighlight = red bold 52
	newNormal = green bold
	newHighlight = green bold 22
[color "branch"]
	current = green reverse
	local = white
	remote = green
[color "decorate"]
	branch = green bold
	HEAD = cyan bold
 	remoteBranch = red bold
 	tag = yellow bold
[color "diff"]
	meta = 7
 	commit = yellow
 	frag = magenta bold
 	func = 146 bold
 	old = red bold
 	new = green bold
 	whitespace = red reverse
[core]
	editor = nvim
	pager = diff-so-fancy | less --tabs=4 -RFX
[init]
	defaultBranch = main
[merge]
  tool = vimdiff
[mergetool  "vimdiff"]
  path = nvim
[user]
	email = a.elhag01@gmail.com
	name = Al-Baraa El-Hag
[interactive]
	diffFilter = diff-so-fancy --patch
[safe]
	directory = /var/www/dokuwiki/data
[column]
	ui = auto
[branch]
	sort = -committerdate
