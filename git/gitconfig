[user]
	email = a.elhag01@gmail.com
	name = Al-Baraa El-Hag
[core]
	editor = nvim
[init]
	defaultBranch = main
[alias]
	ad = add
	ada	= add .
	adc = !git add . && git commit
	adi = add -i

	br = branch
	brd = branch -d
	brnm = branch --no-merged
	brm = branch --merged
	brr = branch -r
	brv = branch -v

	cn = clean
	cnn = clean -n
	cnf = clean -f

	cl = clone
	clh = "! f() { git clone https://github.com/$1/$2.git ; }; f"
	clhd = "! f() { git clone https://github.com/drskoolie/$1.git ; }; f"
	cls = "! f() { git clone git@github.com:$1/$2.git ; }; f"
	clsd = "! f() { git clone git@github.com:drskoolie/$1.git ; }; f"

	co = commit
	coi = commit -m "initial commit"
	com = commit -m
	coam = commit -a -m

	di = diff
	dis = diff --staged

	ed = config --global -e
	
	fe = fetch
	feo = fetch origin

	lo = "! f() { git log --no-color --no-decorate | bat -n -l 'Git log' ; }; f"
	loa = log --all --decorate --oneline --graph
	lod = log --decorate --oneline --graph
	lop = log -p
	lot = log --simplify-by-decoration
	
	me = merge
	mem = merge main
	med = merge develop
	met = mergetool

	rb = rebase

	re = restore
	res = restore --staged

	rt = remote
	rtr = remote remove
	rtv = remote -v
	rts = "!f() { git remote set-url origin git@github.com:$1/$2.git; }; f"
	rtsd = remote set-url origin git@github.com:drskoolie/dotfiles.git
	rtao = "!f() { git remote add origin git@github.com:$1/$2.git; }; f"

	sw = switch
	swc = switch -c
	swcd = switch -c develop
	swm = switch main
	swd = switch develop

	st = status
	sts = status -s

	tg = tag
	tga = tag -a
	tgn = tag -n99
	tgnr = tag -n99 -l --sort=-v:refname

	pu = push
	puo = push origin
	pudo = push -d origin
	puuo = push --set-upstream origin

[mergetool "nvim"]
  cmd = nvim -f -c \"Gvdiffsplit!\" \"$MERGED\"
[merge]
  tool = nvim
[mergetool]
  prompt = false
